extends layout

block stylesheets
    link(rel='stylesheet', href='/css/index.css')

block content
    nav.navbar.navbar-default.navbar-fixed-bottom
        .col-less-padding.col-xs-2.col-md-offset-2.col-md-1
            button#lockScrollButton.btn.btn-lg.btn-default.btn-block(data-toggle='tooltip', title='Scroll lock')
                span.glyphicon.glyphicon-pushpin
        .col-less-padding.col-xs-10.col-md-7
            #messageInputField.input-group
                input#messageInput.form-control.input-lg(type='text', autocomplete='off', placeholder='Message')
                span.input-group-btn
                    button#messageSendButton.btn.btn-lg.btn-primary(type='button') Send
            
    .container
        .row
            .col-xs-12.col-xs-offset-0.col-md-10.col-md-offset-1
                ul#chatRoom.list-group
                    li.list-group-item= title + ' ' + version + ' ('
                        a(href='//#{repo}/commit/#{hash}')= hash.substring(0, 7)
                        | )
                        
    #nicknameModal.modal.fade(role='dialog', tabindex='-1' data-backdrop='static' data-keyboard='false')
        .modal-dialog
            .modal-content
                .modal-header
                    h4.modal-title What's your nickname?
                .modal-body
                    .form-group.has-feedback
                        .input-group
                            span.input-group-addon @
                            input#nicknameInput.input-lg.form-control(type='text', autocomplete='off', maxlength='20' pattern='^[A-Za-z0-9-_. ㄱ-ㅎㅏ-ㅣ가-힣]{1,20}$' placeholder='Nickname')
                        .help-block.with-errors Default nickname is a temporary
                .modal-footer
                    button#nicknameSendButton.btn.btn-primary Start
                

block scripts
    script(src='/js/index.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.6/moment.min.js')
    script(src='/lib/bootstrap-validator/dist/validator.min.js')
