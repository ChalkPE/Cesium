extends layout

block stylesheets
    link(rel='stylesheet', href='/css/index.css')

block content
    nav.navbar.navbar-default.navbar-fixed-bottom
        .col-md-8.col-md-offset-2.col-xs-10.col-xs-offset-0
            #messageInputField.input-group
                input#messageInput.form-control.input-lg(type='text', autocomplete='off', placeholder='Message')
                span.input-group-btn
                    button#messageSendButton.btn.btn-lg.btn-primary(type='button') Send
        .col-md-2.col-xs-2
            .input-group
                button#lockScrollButton.btn.btn-lg.btn-default Lock
            
    .container
        .row
            .col-xs-10.col-xs-offset-1.col-md-10.col-md-offset-1
                ul#chatRoom.list-group
                    li.list-group-item= title + ' (' + hash + ')'

block scripts
    script(src='/js/index.js')
